<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Something neat made with the Aristos CMS">
    <meta name="author" content="Christopher Fox - Fox Design Agency">

    <title>Aristos CMS -
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/main.css" />
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Aristos CMS</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="nav navbar-nav mr-auto">
                <% pages.forEach(function(page){ %>

                    <% if (page.slug == "home"){ %>
                        <li>
                            <a class="nav-link" href="/">
                                <%= page.title %>
                            </a>
                        </li>
                        <% } else{ %>
                            <li>
                                <a class="nav-link" href="/<%= page.slug %>">
                                    <%= page.title %>
                                </a>
                            </li>
                            <% } %>
                                <% }) %>

            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a class="nav-link" href="/cart/checkout">My Cart (
                        <% if (typeof cart !== "undefined") { %>
                            <%= cart.length %>
                                <% } else { %>
                                    0
                                    <% } %>
                                        )</a>
                </li>
                <% if (user) { %>
                    <li>
                        <a class="nav-link" href="/users/logout">Hi,
                            <%= user.username %> ( Logout )</a>
                    </li>
                    <% } else{ %>
                        <li>
                            <a class="nav-link" href="/users/register">Register</a>
                        </li>
                        <li>
                            <a class="nav-link" href="/users/login">Log in</a>
                        </li>
                        <% } %>
                        <% if (user && user.admin == 1) { %>
                            <li>
                                <a class="nav-link" href="/admin/pages">Admin Area</a>
                            </li>
                            <% } %>
            </ul>
        </div>
    </nav>

    <main role="main" class="container">
        <%- messages("messages", locals) %>

            <% if (errors) { %>
                <% errors.forEach(function(error){ %>
                    <div class="alert alert-danger">
                        <%= error.msg %>
                    </div>
                    <% }) %>
                        <% } %>
                            <div class="row">
                                <div class="col-xs-12 col-md-3">
                                    <h3>Categories</h3>
                                    <ul class="list-group">
                                        <li class="list-group-item">
                                            <a href="/products">All products</a>
                                        </li>
                                        <% categories.forEach(function(c){ %>
                                            <li class="list-group-item">
                                                <a href="/products/<%= c.slug %>">
                                                    <%= c.title %>
                                                </a>
                                            </li>
                                            <% }); %>
                                    </ul>
                                </div>
                                <div class="col-xs-12 col-md-1">

                                </div>
                                <div class="col-xs-12 col-md-8">